<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_persona</property>
        <property name="hibernate.connection.username">persona</property>
        <property name="hibernate.default_schema">bd_persona</property>
        <mapping resource="demo/modelo/Genero.hbm.xml" />
        <mapping resource="demo/modelo/Obras.hbm.xml" />
        <mapping resource="demo/modelo/Epoca.hbm.xml" />
        <mapping resource="demo/modelo/Autores.hbm.xml" />
    </session-factory>
</hibernate-configuration>
